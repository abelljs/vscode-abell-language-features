{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Abell",
	"patterns": [
		{
			"include": "text.html.basic"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"begin": "{{",
			"end": "}}",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.tag.begin.html"
				}
			},
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.tag.end.html"
				}
			},
			"name": "variable.name",
			"patterns": [
				{
					"name": "keyword.control.abell",
					"match": "\\b(import_content)\\b",
					"comment": "Imports markdown content from path. REMEMBER: The paths are relative to your content directory!"
				},
				{
					"name": "string.quoted.double.abell",
					"begin": "[\"']",
					"end": "[\"']",
					"patterns": [
						{
							"name": "constant.character.escape.abell",
							"match": "\\\\."
						},
						{
							"name": "variable.name",
							"match": "{{.*?}}"
						}
					]
				},
				{
					"include": "source.js"
				}
			]
		},
		"strings": {
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "variable.name",
					"match": "{{.*?}}"
				}
			]
		}
	},
	"scopeName": "source.abell"
}